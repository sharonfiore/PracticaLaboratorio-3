<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:gravity="center"
            android:text="@string/pizza"
            android:textColor="#EEFFC801"
            android:background="@color/Gris"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@color/Gris"
            android:orientation="horizontal">

        <Button
            android:id="@+id/btn_pizza1"
            android:padding="10sp"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:background="#FFEB3B"
            android:text="@string/TituloDetalle1"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btn_pizza2"
            android:padding="10sp"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:background="#FFEB3B"
            android:text="@string/TituloDetalle2"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btn_pizza3"
            android:padding="10sp"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:background="#FFEB3B"
            android:text="@string/TituloDetalle3"
            android:onClick="onClick" />

        <Button
            android:id="@+id/btn_pizza4"
            android:padding="10sp"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:background="#FFEB3B"
            android:text="@string/TituloDetalle4"
            android:onClick="onClick"/>

            <Button
                android:id="@+id/btn_pizza6"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:background="#FFEB3B"
                android:onClick="onClick"
                android:padding="8sp"
                android:text="@string/TituloDetalle6" />
        </LinearLayout>

    <FrameLayout
        android:id="@+id/DetalleFrag"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>