<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Pizza2Fragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="cursive"
        android:text="@string/TituloDetalle2"
        android:textAlignment="center"
        android:textColor="@color/Amarillo"
        android:textSize="35sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/txt_fragmento"
        android:layout_width="377sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="30sp"
        android:fontFamily="@font/alegreya_italic"
        android:text="@string/Detalle2"
        android:textColor="#7E6D3F"
        android:textSize="20sp" />
    <ImageView
        android:id="@+id/img_pizza1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:contentDescription="@string/TituloDetalle2"
        android:src="@drawable/hawaiana" />
    </LinearLayout>

</LinearLayout>